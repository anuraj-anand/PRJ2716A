<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jarr.anjunabeatsringtones.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="MainFragment"
        android:textColor="#FFFFFF"
        android:background="#c02727"
        android:id="@+id/button" />



      <MediaController
        android:layout_width="50dp"
        android:layout_height="50dp"
          android:background="#784848"
        android:id="@+id/mediaController2"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:background="#000000"
        android:layout_below="@+id/mediaController2"
        android:layout_toLeftOf="@+id/mediaController2"
        android:layout_toStartOf="@+id/mediaController2"
        android:choiceMode="singleChoice" />

</RelativeLayout>
